
@using identityPractice.ViewModels
@model SetPhoneNumberViewModel
@{
    ViewData["Title"] = "SetPhoneNumber";
 
}

<h1>SetPhoneNumber</h1>

<h4>شماره موبایل خود را وارد کنید</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PhoneNumber" asp-controller="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @if (TempData["Error"] != null)
            {
                <div class="text-danger">@TempData["Error"]</div>
            }
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
