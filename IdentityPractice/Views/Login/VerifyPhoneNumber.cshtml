@using identityPractice.ViewModels

@model VerifyPhoneNumberViewModel

@{
    ViewData["Title"] = "VerifyPhoneNumber";
}

<h1>VerifyPhoneNumber</h1>

<h4> کد ارسال شده به شماره موبایل خود را وارد کنید</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPhoneNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewData["Message"] != null)
            {
                <div class="text-danger">@ViewData["Message"]</div>
            }
            <div class="form-group">
                 <input type="hidden" asp-for="PhoneNumber" class="form-control" />
                <input type="hidden" asp-for="Totp" class="form-control" />
             </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">ورود</button>
        </form>
    </div>
</div>



